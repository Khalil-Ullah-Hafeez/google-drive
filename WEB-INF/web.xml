<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	
	<servlet>		
		<servlet-name>Login</servlet-name>
		<servlet-class>drive.authentication.Login</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>

	<servlet>		
		<servlet-name>Signup</servlet-name>
		<servlet-class>drive.authentication.Signup</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Signup</servlet-name>
		<url-pattern>/Signup</url-pattern>
	</servlet-mapping>

	<servlet>		
		<servlet-name>Logout</servlet-name>
		<servlet-class>drive.authentication.Logout</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>

	<servlet>		
		<servlet-name>FileUpload</servlet-name>
		<servlet-class>drive.file.FileUpload</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FileUpload</servlet-name>
		<url-pattern>/FileUpload</url-pattern>
	</servlet-mapping>

	<servlet>		
		<servlet-name>ViewFile</servlet-name>
		<servlet-class>drive.file.ViewFile</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ViewFile</servlet-name>
		<url-pattern>/ViewFile</url-pattern>
	</servlet-mapping>

	<servlet>		
		<servlet-name>DownloadFile</servlet-name>
		<servlet-class>drive.file.DownloadFile</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DownloadFile</servlet-name>
		<url-pattern>/DownloadFile</url-pattern>
	</servlet-mapping>

	<context-param>  
		<param-name>DBURL</param-name>  
		<param-value>jdbc:mysql://localhost/GoogleDrive</param-value>  
	</context-param>

	<context-param>  
		<param-name>DBUSER</param-name>  
		<param-value>root</param-value>  
	</context-param>

	<context-param>  
		<param-name>DBPASSWORD</param-name>  
		<param-value>root</param-value>  
	</context-param>

</web-app>